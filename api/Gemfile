source "https://rubygems.org"

gem "httparty" # biblioteca para requisições HTTP
gem "json" # biblioteca para trabalhar com JSON
gem "rspec" # framework de testes
gem "faker" # biblioteca para gerar dados falsos nos testes
gem "rspec_junit_formatter" # formata os resultados do RSpec no formato JUnit para integração com ferramentas de CI/CD
gem "parallel_tests" # biblioteca para executar testes em paralelo
gem "cucumber" # ferramenta para escrita de testes BDD
gem "cucumber-rest-bdd" # adiciona suporte para testes de API com Cucumber
gem 'rack-test' # biblioteca fornece um conjunto de métodos sem a necessidade de um servidor web real
gem 'dotenv', '~> 2.7', '>= 2.7.6'
